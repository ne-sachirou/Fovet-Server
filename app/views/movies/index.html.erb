<h1>Listing movies</h1>

<table>
  <thead>
    <tr>
      <th>Count</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Uuid</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.count %></td>
        <td><%= movie.lat %></td>
        <td><%= movie.long %></td>
        <td><%= movie.uuid %></td>
        <td><%= movie.user_id %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

